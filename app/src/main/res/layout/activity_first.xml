<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".chapter01activity.FirstActivity">

    <TextView
            android:id="@+id/textView"
            style="@style/HomeTextViewStyle"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="HasContextMenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.553"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_to_second"
            style="@style/HomeTextViewStyle"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="ToSecond"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.553"
            app:layout_constraintTop_toBottomOf="@id/textView"/>

    <TextView
            android:id="@+id/tv_dial"
            style="@style/HomeTextViewStyle"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="To Dial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_to_second"/>

    <TextView
            android:id="@+id/tv_for_result"
            style="@style/HomeTextViewStyle"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Start For Result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dial"/>

    <EditText
            android:id="@+id/tv_display"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>