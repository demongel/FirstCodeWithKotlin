<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".chapter03fragment.FragmentActivity">

    <!--// 2019-07-24 NOTE:  id is indispensable here-->
    <fragment
        android:id="@+id/left_fragment"
        android:name="com.shakespace.firstlinecode.chapter03fragment.fragment.TopFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        />


    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider" />

    <fragment
        android:id="@+id/right_fragment"
        android:name="com.shakespace.firstlinecode.chapter03fragment.fragment.BottomFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />


</LinearLayout>